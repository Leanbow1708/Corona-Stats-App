<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FDC391"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".IndividualWorldActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/state_specific_bkg_1"
        android:layout_height="0sp">

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtState"
            android:text="India"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realtime Counter"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#ffffff"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtConfirmed"
                            android:text="7"
                            android:textSize="25sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:fontFamily="@font/montserrat_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirmed"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtRecovered"
                            android:text="2"
                            android:textSize="25sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:fontFamily="@font/montserrat_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recovered"
                            />

                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:paddingTop="5sp"
                        android:paddingBottom="5sp"
                        android:layout_width="0sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="30sp"
                        android:background="@drawable/state_wise_btn_bkg"
                        android:orientation="vertical"
                        android:layout_marginRight="15sp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtActive"
                            android:text="5"
                            android:textSize="25sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="#000000"/>
                        <TextView
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:fontFamily="@font/montserrat_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingTop="5sp"
                        android:paddingBottom="5sp"
                        android:layout_marginLeft="15sp"
                        android:gravity="center"
                        android:layout_marginRight="30sp"
                        android:background="@drawable/state_wise_btn_bkg"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDeath"
                            android:text="2"
                            android:textSize="25sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="#000000"/>
                        <TextView
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:fontFamily="@font/montserrat_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Death"
                            />

                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>



        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:background="#FDC391"
        android:layout_weight="1.5">


        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/pieChart"/>




    </LinearLayout>


</LinearLayout>