<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDC391"
    android:orientation="vertical"
    tools:context=".IndividualNewActivity">
    <ImageView
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:id="@+id/imgNews"
        android:src="@drawable/india"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_margin="10sp"
        android:background="@drawable/row_news_feed"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/news"/>
            <TextView
                android:layout_marginLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/txtSource"
                android:text="Times Of India"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"
                />
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"

            android:layout_height="150sp">



            <TextView
                android:id="@+id/txtContent"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_marginTop="30sp"
                android:fontFamily="@font/montserrat_light"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="new adg fgeeg sgfwegwewg wegwegwegewgewgegwegwegwegefwegwegbib8icsbb9b9sb9f"/>



        </androidx.core.widget.NestedScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btnNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center|bottom"

                android:background="#FDC391"
                android:fontFamily="@font/montserrat_light"
                android:paddingLeft="30sp"
                android:paddingTop="5sp"
                android:paddingRight="30sp"
                android:paddingBottom="5sp"
                android:text="Open"
                android:textColor="#000000"
                android:textSize="15sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>













    </LinearLayout>

</LinearLayout>